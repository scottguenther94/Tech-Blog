<div class="container">
    <h3>Edit Your Post:</h3>
    <form class="edit-post-form col-md-6">
        <div class="form-group">
          <label for="post-title">Post Title:</label>
            <input name="post-title" type="text" value="{{post.title}}" id="post-title" />
        </div>
        <br>
        <div class="form-group">
          <label for="post-text">Post Text:</label>
            <textarea name="post-text" id="post-text">{{post.post_text}}</textarea>
        </div>
        <div>
            Posted on {{format_date post.created_at}}
        </div>
        <button type="submit" class="btn btn-sm btn-primary" id="updatePostButton">Update Post</button>
        <button type="button" class="btn btn-sm btn-danger" id="deletePostButton">Delete Post</button>
    </form>
    <a href="/dashboard">Return to Dashboard</a>
</div>

<script src="/js/edit-post.js"></script>