<div class="card post">
  <div class="card-body">
    <div class="card-title d-flex justify-content-between flex-row">
      <h2 class="column">{{title}}</h2>
      <p class="card-subtitle text-muted column">Posted by {{user.username}} <br> on {{format_date createdAt}}</p>
    </div>
    <p class="card-body">
      {{post_text}}
    </p>
  </div>
</div>

<!--uses built-in handlebar #each helper to render all the comments on a specific post separately-->
{{#each comments as |comment|}}
<div class="card comment">
  <section class="card-body">
    <div class="meta text-muted">
      {{user.username}} commented on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
</div>
{{/each}}

<!--uses the built-in handlebar #if helper so comment form is only visible if user is logged in-->
{{#if logged_in}}
<div class="container">
  <form class="comment-form col-md-6">
    <h4>Post a comment:</h4>
    <div class="mb-3">
      <textarea name="comment-body" id="comment-text"></textarea>
    </div>

    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Post Comment</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>
{{/if}}