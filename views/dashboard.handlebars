<div class="container">
  <div class="col-md-6">
    <h3>Your Posts:</h3>
    <!--uses built-in handlebar #if helper to display existing posts only if the user has made a post-->
    {{#if posts.length}}
    <div class="post-list">
      <!--uses built-in handlebar #each helper to render the user's posts separately -->
      {{#each posts as |post|}}
      <div class="row mb-2 card">
        <div class="col-md-8">
          <h4><a href="/dashboard/edit/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-7">
          <p class="text-muted">
            Posted on {{format_date post.created_at}}
          </p>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <p>You have not posted anything.</p>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary" id="displayNewPostFormButton" onclick="displayNewPostForm()">Create a New Post</button>
    <div class="col-md-6" style="display: none" id="new-post-form">
      <h3>Create a New Post:</h3>
      <form class="form new-post-form">
        <div class="form-group">
          <label for="post-title">Post Title:</label>
          <input class="form-input" type="text" id="post-title" name="post-title" />
        </div>
        <br>
        <div class="form-group">
          <label for="post-text">Post Text:</label>
          <textarea class="form-input" id="post-text" name="post-text"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>

  </div>
</div>

<script src="/js/dashboard.js"></script>